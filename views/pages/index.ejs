   <!-- *************REGISTER USER BEGINS************************** -->
     <div id="add-user" class="w3-container city">
      <section>
        <h1>User Registration</h1>
          <div class="w3-card-4 card-space">
              
            <form action=<%= pages_path = '/add' %> method="post" id="usersignup" class="w3-margin w3-padding-large">
                <div class="w3-container general-userinfo">
                        <p>
                        <label for=" firstname">First Name</label>
                        <input class="w3-input w3-border w3-round" name="firstname" type="text" id="firstname"></p>
                        <p>
                        <label for = "lastname" >Last Name</label>
                        <input class="w3-input w3-border w3-round-large" name="lastname" type="text" id="lastname"></p>
                        <p>
                        <input class="w3-radio" type="radio" name="sex" value="male">
                        <label>Male</label>
                        </p>
                        <p>
                        <input class="w3-radio" type="radio" name="sex" value="female">
                        <label>Female</label>
                        </p>
                      
                          <h2> I can be described as, <b>a/an</b> </h2>
                          
                      <div class="user-category">
                        <div class="tablink-user w3-button" onclick="innerdata(event, 'actor-user')">
                            <input class="w3-radio" type="radio" id="actor" name="role" value="actor">
                            <label for="actor">Actor only</label>
                        </div>

                        <div class=" tablink-user w3-button" onclick="innerdata(event, 'mrp-user')">
                            <input class="w3-radio" type="radio" id="mrperson" name="role" value="movie related person">
                            <label  for="mrperson">Actor and movie production team</label>
                        </div>

                        <div class="tablink-user w3-button" onclick="innerdata(event, 'consumer-user')">
                            <input class="w3-radio" type="radio" id="mconsumer" name="role" value="movie consumer">
                            <label for="mconsumer">Movie Consumer</label>
                        </div>
                      </div> 
                      <section id="consumer-user" class="consumer-user w3-container user-data ">
                        <h2>Movie category I prefer to watch...</h2>
                        <small>Select all that applies.</small>
                         <div class="w3-padding" id="ugenre"> <!--   fix genre here                     -->                          
                           
                            <%  genres.rows.forEach(fgenre =>{ %> 
                              <p>
                                  <input class="w3-check" name="usermoviegenre" id="" value=<%=fgenre.id%> type="checkbox">
                                  <label> <%=fgenre.genre%> </label>
                              </p>
                              <%});%>                                                                       
                              
                        </div>                                                   
                        <button type="submit" id="btn" class="w3-btn w3-teal">Register User</button>  
                    </section>


                    <section id="actor-user" class="actor-user w3-container user-data">
                        <h2>Movie(s) starred in...</h2>
                      <div class="w3-padding">                              <!--   fix movie here                     -->                 
                          
                          <%  movies.rows.forEach(movie =>{ %> 
                          <p>
                              <input class="w3-check" name="movies" id="" value=<%=movie.id%> type="checkbox">
                              <label><%=movie.title%></label>
                          </p>
                          <%});%> 
                                             
                      </div>
                      <button type="submit" id="btn" class="w3-btn w3-teal">Register User</button>
                    </section>


                  <section id="mrp-user" class="mrp-user w3-container user-data ">
                    <h2>Part of the production team in movie(s) ...</h2>

                    <div class="w3-padding">                           
                        <select class="w3-select w3-border" name="movies">
                          <!--   fix movies here                     -->
                            <option value="" disabled selected>Choose your option</option>
                            <%  movies.rows.forEach(movie =>{ %>
                            <option value=<%=movie.id%>><%=movie.title%></option>
                            <%});%>                            
                          </select>                   
                    </div>

                    <h2>Role(s) in production team ...</h2> <!--   fix roles here                     -->
                    <div class="w3-row-padding w3-container">                     
                        <%  roles.rows.forEach(frole =>{ %>
                        <p>
                            <input class="w3-check" name="roles" id="" value=<%=frole.id%> type="checkbox">
                            <label> <%=frole.role%> </label>
                          </p>
                          <%});%>                                                      
                        
                      </div>
                    <p><button type="submit" id="btn" class="w3-btn w3-teal">Register User</button></p>

                  </section>                 
                </div>                         
              </form>
          </div>
