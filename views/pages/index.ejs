       <!-- ALL MOVIES SECTION START -->
       <div id="all-movies" class="w3-container city">
          <section>
            <h4>  <input type="button" value="Refresh data" class="w3-button w3-round-large w3-green "></h4>
            <table class="w3-table-all w3-card-4">
              <thead>
              <tr>
                <th>ID</th>                  
                <th>Title</th>
                <th>Description</th>
                <th>Released at:</th>
                <th>Country of production: </th>
                <th>Genre:</th>
              </tr>
              </thead>
