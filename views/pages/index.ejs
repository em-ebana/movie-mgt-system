     <!-- add a movie start -->
       <div id="add-movie" class="w3-container city">        
          <section>
            <h1>Add Movie</h1>
              <div class="w3-card-4 card-space">                  
                <form action=<%= pages_path = '/movies/add' %> method="post" id="add-film" class="w3-margin w3-padding-large">
                    <div class="w3-container general-userinfo">
                            <p>
                            <label>Title</label>
                            <input class="w3-input w3-border w3-round" name="title" type="text"></p>
                            <p>
